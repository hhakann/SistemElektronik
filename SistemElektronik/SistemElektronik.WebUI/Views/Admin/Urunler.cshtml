
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<SistemElektronik.WebUI.Models.Urun>
<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/UrunEkle" class="btn btn-success">
                        Yeni Ürün <i class="icon-plus"></i>
                    </a>
                </div>
               
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori</th>
                        <th>Eklenme Tarihi</th>
                        <th>Marka</th>
                        <th>Son Kullanma Tarihi</th>
                        <th>Resim Ekle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var urun in Model)
                    {
                        <tr class="">
                            <td>@urun.Adi</td>
                            <td>@urun.Aciklama</td>
                            <td>@urun.AlisFiyat</td>
                            <td class="center">@urun.SatisFiyat</td>
                            <td class="center">@urun.Kategori.Adi</td>
                            <td class="center">@urun.EklenmeTarihi</td>
                            <td class="center">@urun.Marka.Adi</td>
                            <td class="center">@urun.SonKullanmaTarihi</td>
                            <td>
                                <a class="delete" href="/Admin/UrunResimEkle/@urun.Id">

                                    <i class="icon-folder-open"></i>
                                </a>
                            </td>

                            <td><a class="edit" href="/Admin/UrunGuncelle/@urun.Id">
                                <i class="icon-pencil"></i>
                                </a></td>
                            <td><a class="delete" href="/Admin/UrunSil/@urun.Id">
                                
                              <i class="icon-trash"></i>
                                </a></td>
                            
                        </tr>
                    }


                    
                </tbody>
            </table>
        </div>
    </div>
</section>


